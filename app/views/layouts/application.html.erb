<!DOCTYPE html xmlns:fb="https://www.facebook.com/2008/fbml">
<html>
  <head>
    <title>NameThat</title>
    <%= stylesheet_link_tag 'screen.css', :media => 'screen, projection' %>
    <%= stylesheet_link_tag 'print.css', :media => 'print' %>
    <!--[if IE]><%= stylesheet_link_tag 'ie.css', :media => 'screen, projection' %><![endif]-->
    <%= javascript_include_tag :all %>
    <%= csrf_meta_tag %>
    <script type="text/javascript">

      // Google analytics code
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '<%= Settings.ga_account %>']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
  </head>
  <body>
    <div id="header-background"></div>
    <div id="wrapper">
      <div id="header">
        <%= link_to "NameThat", root_path ,{ :class => "title" } %>
        <div class="nav">
          <%= link_to "About", about_path %>
        </div>
      </div>
      <div id="body">
        <%= yield %>
      </div>
      <div id="footer">
        <%= link_to "Privacy", privacy_path %>
        <%= link_to "Terms", terms_path %>
      </div>
    </div>
  </body>
</html>
